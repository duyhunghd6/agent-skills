# Skill Guardrails - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================
# Your custom Gemini API endpoint URL
GEMINI_API_URL=https://your-gemini-endpoint.com/v1

# Your Gemini API key
GEMINI_API_KEY=your-api-key-here

# Model to use for semantic analysis
GEMINI_MODEL=gemini-2.0-flash

# =============================================================================
# SCANNING CONFIGURATION
# =============================================================================
# Number of parallel scans (default: 4)
SCAN_PARALLEL=4

# Timeout for each skill scan in seconds (default: 30)
SCAN_TIMEOUT=30

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# RISK THRESHOLDS
# =============================================================================
# Score above which skill is flagged for review (default: 0.3)
RISK_THRESHOLD_MEDIUM=0.3

# Score above which skill requires human review (default: 0.6)
RISK_THRESHOLD_HIGH=0.6

# Score above which skill is blocked/quarantined (default: 0.8)
RISK_THRESHOLD_CRITICAL=0.8

# =============================================================================
# SANDBOX CONFIGURATION (Level 3)
# =============================================================================
# Enable sandbox execution for high-risk skills (default: true)
SANDBOX_ENABLED=true

# Docker image for sandbox (default: python:3.11-slim)
SANDBOX_IMAGE=python:3.11-slim

# Sandbox memory limit (default: 256MB)
SANDBOX_MEMORY_LIMIT=256m

# Sandbox CPU limit (default: 0.5)
SANDBOX_CPU_LIMIT=0.5

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
# Directory for reports (default: ./reports)
REPORTS_DIR=./reports

# Report format: json, html, markdown (default: json)
REPORT_FORMAT=json
